@model List<Bookish.DataAccess.BookInfo>
    <head>
        <link rel="stylesheet" href="~/css/table.css">
    </head>
<div class="text-center">
    <h1 class="display-4">Book List</h1>
    <table>
        <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>BarCode</th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
        @foreach (var book in Model)
        {
    <tr>
        <td>@book.ISBN</td>
        <td>@book.BookName</td>
        <td>@book.Author</td>
        <td>@book.BarCode</td>
        <td><img src="@book.Picture" alt="No image provided" ></td>
        <td>
            <button type="button" class="btn btn-success" text="go away" onclick="location.href='@Url.Action("BookInfo","Home",new {ISBN = book.ISBN})'">Book Info</button>
            <button name="EditBook" class="btn btn-success" type="button" alt="Edit Book" onclick="location.href='@Url.Action("EditBook","Home",new {ISBN = book.ISBN})'">Edit Book</button>
        </td>
    </tr>          
         }
    </table>
</div>